<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/drag_drop_list_view_load_progress_bar"
        style="@style/AppTheme.DragDropProgressBarTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/drag_drop_list_view_button"
        android:indeterminate="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/drag_drop_list_view_button"
        style="@style/AppTheme.DragDropMediumFontTheme"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/drag_drop_list_view_bottom_button_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/drag_drop_list_view_bottom_button_margin_left"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/drag_drop_list_view_bottom_default_text"
        android:textColor="@color/grey_400"/>

</RelativeLayout>