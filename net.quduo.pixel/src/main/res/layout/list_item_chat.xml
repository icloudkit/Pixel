<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/chat_avatar_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_contact_action_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="订阅号"
                android:textColor="@color/grey_900"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="中午12:49"
                android:textColor="@color/grey_500"
                android:textSize="12sp" />
        </RelativeLayout>

        <!--
        setEllipsize()
        android:ellipsize = "end" 省略号在结尾
        android:ellipsize = "start" 省略号在开头
        android:ellipsize = "middle" 省略号在中间
        android:ellipsize = "marquee" 跑马灯
        -->
        <TextView
            android:id="@+id/chat_summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="溜溜梅:今日小寒, 是时候给大头娘娘..."
            android:textColor="@color/grey_500"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>