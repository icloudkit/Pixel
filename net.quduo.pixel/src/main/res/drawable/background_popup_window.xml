<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <!--<corners android:radius="1dp" />-->
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:top="1px">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_900" />
            <!--<gradient android:startColor="@color/dark_transparent_gray" android:endColor="@color/dark_transparent_gray" android:angle="270" />-->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" />
        </shape>
    </item>
</layer-list>
